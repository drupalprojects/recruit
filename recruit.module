/**
 * Implements hook_forms().
 */
function recruit_forms($form_id, $args) {
  // For efficiency, only act if the third argument is 'profile2'.
  if (isset($args[2]) && is_string($args[2]) && $args[2] == 'recruit_application') {
    foreach (node_type_get_types() as $type) {
      $forms["recruit_application_node_" . $type->type . "_form"]['callback'] = 'recruit_application_application_form';
      $forms["recruit_application_node_" . $type->type . "_form"]['wrapper callback'] = 'entity_ui_form_defaults';
    }
    return $forms;
  }
}

